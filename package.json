{
  "name": "nlcst-emoji-modifier",
  "version": "2.0.3",
  "description": "Emoji in NLCST",
  "license": "MIT",
  "keywords": [
    "nlcst",
    "emoji"
  ],
  "repository": "syntax-tree/nlcst-emoji-modifier",
  "bugs": "https://github.com/syntax-tree/nlcst-emoji-modifier/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
    "Hugo Dozois <hugo.dozois@gmail.com>"
  ],
  "files": [
    "data/emoji.json",
    "index.js"
  ],
  "dependencies": {
    "gemoji": "^4.2.0",
    "nlcst-to-string": "^2.0.0",
    "unist-util-modify-children": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "esmangle": "^1.0.0",
    "is-hidden": "^1.1.0",
    "negate": "^1.0.0",
    "nyc": "^14.0.0",
    "parse-english": "^4.0.0",
    "prettier": "^1.0.0",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^5.0.0",
    "tape": "^4.0.0",
    "unist-util-remove-position": "^1.0.0",
    "xo": "^0.24.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify index.js --bare -s nlcstEmojiModifier > nlcst-emoji-modifier.js",
    "build-mangle": "esmangle < nlcst-emoji-modifier.js > nlcst-emoji-modifier.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "guard-for-in": "off",
      "complexity": "off"
    },
    "ignore": [
      "nlcst-emoji-modifier.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
