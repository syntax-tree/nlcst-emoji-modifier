{
  "name": "nlcst-emoji-modifier",
  "version": "4.1.1",
  "description": "nlcst utility to support emoji",
  "license": "MIT",
  "keywords": [
    "unist",
    "nlcst",
    "nlcst-util",
    "util",
    "utility",
    "emoticon",
    "emoji"
  ],
  "repository": "syntax-tree/nlcst-emoji-modifier",
  "bugs": "https://github.com/syntax-tree/nlcst-emoji-modifier/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
    "Hugo Dozois <hugo.dozois@gmail.com>"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "dependencies": {
    "emoji-regex": "^9.0.0",
    "gemoji": "^7.0.0",
    "nlcst-to-string": "^3.0.0",
    "unist-util-generated": "^2.0.0",
    "unist-util-position": "^4.0.0",
    "unist-util-visit": "^3.0.0"
  },
  "devDependencies": {
    "c8": "^7.0.0",
    "is-hidden": "^2.0.0",
    "parse-english": "^5.0.0",
    "prettier": "^2.0.0",
    "remark-cli": "^9.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "tape": "^5.0.0",
    "unist-builder": "^3.0.0",
    "unist-util-remove-position": "^4.0.0",
    "xo": "^0.38.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier . --write --loglevel warn && xo --fix",
    "test-api": "node test/index.js",
    "test-coverage": "c8 --check-coverage --branches 100 --functions 100 --lines 100 --statements 100 --reporter lcov node test/index.js",
    "test": "npm run format && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "unicorn/no-array-for-each": "off",
      "no-var": "off",
      "prefer-arrow-callback": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
